<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:id="@+id/list_item_forecast_textview">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/date_next_days"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="max"
        android:id="@+id/max_temp_next_days"
        android:layout_alignTop="@+id/min_temp_next_days"
        android:layout_toEndOf="@+id/min_temp_next_days"
        android:layout_marginStart="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min"
        android:id="@+id/min_temp_next_days"
        android:layout_above="@+id/wind_next_days"
        android:layout_alignStart="@+id/wind_next_days" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wind:"
        android:id="@+id/wind_next_days"
        android:layout_marginStart="40dp"
        android:layout_alignBottom="@+id/date_next_days"
        android:layout_toEndOf="@+id/date_next_days" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:id="@+id/description_next_days"
        android:layout_alignTop="@+id/max_temp_next_days"
        android:layout_toEndOf="@+id/max_temp_next_days"
        android:layout_marginStart="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/clouds_value_next_days"
        android:layout_alignTop="@+id/clouds_next_days"
        android:layout_toEndOf="@+id/clouds_next_days"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clouds:"
        android:id="@+id/clouds_next_days"
        android:layout_below="@+id/wind_next_days"
        android:layout_alignStart="@+id/wind_next_days" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pressure"
        android:id="@+id/pressure_next_days"
        android:layout_alignTop="@+id/clouds_value_next_days"
        android:layout_toEndOf="@+id/clouds_value_next_days"
        android:layout_marginStart="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/wind_value_next_days"
        android:layout_alignTop="@+id/wind_next_days"
        android:layout_toEndOf="@+id/wind_next_days"
        android:layout_marginStart="5dp"/>

</RelativeLayout>