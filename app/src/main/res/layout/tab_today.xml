<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location"
        android:id="@+id/location_value"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date"
        android:id="@+id/date_value"
        android:layout_below="@+id/location_value"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TEMPERATURE"
        android:id="@+id/temp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/date_value"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/description"

        android:layout_below="@+id/temp"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:orientation="vertical"
        android:id="@+id/table_layout"
        android:layout_below="@+id/description"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

        <TableRow
            android:background="#f9f9f9"
            android:padding="5dp">
            <TextView
                android:id="@+id/row_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="Min" />
            <TextView
                android:id="@+id/row_min_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="-" />
        </TableRow>

        <TableRow
            android:background="#ffffff"
            android:padding="5dp">
            <TextView
                android:id="@+id/row_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="Max" />
            <TextView
                android:id="@+id/row_max_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="-" />
        </TableRow>

        <TableRow
            android:background="#f9f9f9"
            android:padding="5dp">
            <TextView
                android:id="@+id/row_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="Wind" />
            <TextView
                android:id="@+id/row_wind_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="-" />
        </TableRow>

        <TableRow
            android:background="#ffffff"
            android:padding="5dp">
            <TextView
                android:id="@+id/row_clouds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="Cloudiness" />
            <TextView
                android:id="@+id/row_clouds_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="-" />
        </TableRow>

        <TableRow
            android:background="#f9f9f9"
            android:padding="5dp">
            <TextView
                android:id="@+id/row_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="Pressure" />
            <TextView
                android:id="@+id/row_pressure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="-" />
        </TableRow>

        <TableRow
            android:background="#ffffff"
            android:padding="5dp">
            <TextView
                android:id="@+id/row_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="Humidity" />
            <TextView
                android:id="@+id/row_humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="-" />
        </TableRow>

    </TableLayout>

</RelativeLayout>